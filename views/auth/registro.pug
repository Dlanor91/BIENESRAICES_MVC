extends ../layout/index

block contenido
  .py-10 
    h1.text-4xl.my-10.text-center.font-extrabold Bienes
      span.font-normal Raices
    h2.text-center.text-2xl.font-extrabold= pagina 

    if errores 
      div(class="max-w-md mx-auto my-10")
        each error in errores
          p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg  

    .mt-8.mx-auto.max-w-md 
      .bg-white.py-8.px-4.shadow 
        form.space-y-5(method="POST", action="/auth/registro")
          input(type="hidden" name="_csrf" value= csrfToken)
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(
              for="nombre"
            ) Tu Nombre
            input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
              type="text",
              placeholder="Tu Nombre",
              name="nombre"
              value=usuario ? usuario.nombre: ''
            )
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(
              for="email"
            ) Email
            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
              type="email",
              placeholder="Tu Email",
              name="email"
              value=usuario ? usuario.email: ''
            ) 
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(
              for="password"
            ) Password
            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
              type="password",
              placeholder="Tu Password",
              name="password"
            )
          div 
            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(
              for="repetir_password"
            ) Repetir Password
            input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(
              type="password",
              placeholder="Repite tu Password",
              name="repetir_password"
            )

          .flex.items-center.justify-between 
            a.text-gray-500.text-xs(href="/auth/login") Ya tienes cuenta? Inicia Sesión
            a.text-gray-500.text-xs(href="/auth/olvide-password") Olvidé mi Password

          input.w-full.bg-indigo-600.text-white.font-bold.py-2.cursor-pointer(
            class="hover:bg-indigo-700",
            type="submit",
            value="Crear Cuenta"
          ) 
